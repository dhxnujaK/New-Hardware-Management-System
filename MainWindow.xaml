<Window x:Class="New_Hardware_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:New_Hardware_Management_System"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF264993" Offset="0.958"/>
                <GradientStop Color="#FF020331" Offset="0.281"/>
                <GradientStop Color="#FF1C0D6F" Offset="0.522"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="234*"/>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="434" Margin="102,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="230" Grid.Column="1">
            <Rectangle.Fill>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InactiveCaptionTextColorKey}}"/>
            </Rectangle.Fill>
        </Rectangle>

        <Button Content="Add Items" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="230" Background="White" Grid.ColumnSpan="3" Margin="102,1,0,0" FontSize="14" Grid.Column="1"/>
        <Button Content="Edit Items" HorizontalAlignment="Left" Margin="102,41,0,0" VerticalAlignment="Top" Height="40" Width="230" Grid.ColumnSpan="3" FontSize="14" Grid.Column="1"/>
        <Button Content="Delete Items" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="230" Grid.ColumnSpan="3" Margin="102,81,0,0" FontSize="14" Grid.Column="1"/>
        <Button Content="Bill Calculator" HorizontalAlignment="Left" Margin="102,121,0,0" VerticalAlignment="Top" Width="230" Height="40" Grid.ColumnSpan="3" FontSize="14" Grid.Column="1"/>
        <Button Content="Main Menu" HorizontalAlignment="Left" Margin="102,161,0,0" VerticalAlignment="Top" Width="230" Height="40" Grid.ColumnSpan="3" FontSize="14" Grid.Column="1"/>
        <Label Content="Welcome To The Hardware Management System" HorizontalAlignment="Left" Margin="52,41,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontFamily="Sitka Heading Semibold" FontSize="22" Grid.ColumnSpan="2"/>
        <Label Content="Created By DPK &amp; NBH" HorizontalAlignment="Left" Margin="0,408,0,0" VerticalAlignment="Top"/>
        <Button Content="Log Out" HorizontalAlignment="Left" Margin="102,396,0,0" VerticalAlignment="Top" Width="230" Height="40" Grid.ColumnSpan="3" Background="Red" Foreground="White" FontWeight="Bold" FontSize="14" Grid.Column="1"/>

    </Grid>
</Window>
